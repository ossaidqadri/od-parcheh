<div class="px-[15px] sm:px-[30px]" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="text-right ml-auto max-w-[80vw]">
    {% if section.settings.message_text != blank %}
      <div class="text-sm text-black leading-relaxed">
        {{ section.settings.message_text }}
      </div>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="inline-block mt-6 bg-black text-white rounded-full px-8 py-1 text-sm hover:opacity-90 transition-opacity duration-300 no-underline"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}

    {% if section.settings.footer_quote != blank %}
      <div class="mt-40 text-sm text-black">
        {{ section.settings.footer_quote }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Brand Message",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "message_text",
      "label": "Message Text",
      "default": "<p><em>Parcheh Minimalism</em></p><p>Accessible design by producing less & building better.<br/>Contemporary fashion from the heart of creativity</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "footer_quote",
      "label": "Footer Quote",
      "info": "Optional quote displayed below with large spacing",
      "default": "* Good design is as little design as possible *"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "Brand Message"
    }
  ]
}
{% endschema %}
